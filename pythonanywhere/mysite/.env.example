# ============================================
# SPLIT LEASE FLASK APPLICATION
# Environment Variables Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# --------------------------------------------
# DATABASE CONFIGURATION
# --------------------------------------------
DATABASE_URL=sqlite:///splitlease.db
# For PostgreSQL (PythonAnywhere): postgresql://username:password@host:port/database
# For MySQL (PythonAnywhere): mysql://username:password@host:port/database

# --------------------------------------------
# FLASK CONFIGURATION
# --------------------------------------------
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this-in-production

# --------------------------------------------
# GOOGLE CALENDAR API CONFIGURATION
# (Required for Calendar Automation Module)
# --------------------------------------------
# NEW - Path to Google Service Account JSON credentials file
# Download this from Google Cloud Console > IAM & Admin > Service Accounts
# Example: /home/SplitLease/mysite/credentials/service-account.json
GOOGLE_SERVICE_ACCOUNT_JSON=/path/to/your/service-account.json

# NEW - Google Team Calendar ID (for master events with Meet links)
# This is the calendar where the master event with Google Meet link is created
# Example: splitleasebot@gmail.com or your-calendar-id@group.calendar.google.com
GOOGLE_TEAM_CALENDAR_ID=splitleasebot@gmail.com

# NEW - Google Service Calendar ID (for guest and host invitation events)
# This is the calendar from which invitations are sent to guests and hosts
# Usually the same as the service account email
GOOGLE_SERVICE_CALENDAR_ID=splitleasebot@gmail.com

# --------------------------------------------
# BUBBLE.IO API CONFIGURATION
# (Required for Calendar Automation Module)
# --------------------------------------------
# NEW - Bubble API authentication token
# Get this from Bubble.io > Settings > API > Private API Token
# NOTE: Frontend uses VITE_BUBBLE_API_KEY (see app/.env.example). This backend
# uses BUBBLE_API_TOKEN. These are different credentials for different API layers
# but serve the same Bubble app.
BUBBLE_API_TOKEN=your-bubble-api-token-here

# NEW - Bubble App ID (default: upgradefromstr)
# This is your Bubble app identifier
BUBBLE_APP_ID=upgradefromstr

# NEW - Bubble App Version (default: version-test)
# The version of your Bubble app to connect to (version-test, live, etc.)
BUBBLE_APP_VERSION=version-test

# --------------------------------------------
# SLACK WEBHOOK CONFIGURATION
# (Optional - for logging and notifications)
# --------------------------------------------
# Slack webhook URLs for error and success notifications
SLACK_ERROR_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/ERROR/WEBHOOK
SLACK_SUCCESS_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SUCCESS/WEBHOOK

# --------------------------------------------
# SLACK EVENTS API CONFIGURATION
# (Required for Slack Events Module)
# --------------------------------------------
# NEW - Slack Signing Secret (for request verification)
# Get this from Slack App Settings > Basic Information > App Credentials
# This is REQUIRED for secure webhook verification
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# NEW - Slack Bot Token (for API interactions)
# Get this from Slack App Settings > OAuth & Permissions
# Format: xoxb-your-bot-token
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# NEW - Slack App Token (for Socket Mode - optional)
# Get this from Slack App Settings > Basic Information > App-Level Tokens
# Format: xapp-your-app-token
SLACK_APP_TOKEN=xapp-your-app-token-here

# --------------------------------------------
# GOOGLE DRIVE API CONFIGURATION
# (Optional - for contract and document upload)
# --------------------------------------------
# Path to Google Drive credentials (if different from calendar credentials)
GOOGLE_DRIVE_CREDENTIALS_PATH=/path/to/drive/credentials.json
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id

# --------------------------------------------
# APPLICATION-SPECIFIC SETTINGS
# --------------------------------------------
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Session timeout in seconds (default: 1800 = 30 minutes)
SESSION_TIMEOUT=1800

# Maximum retry attempts for API calls (default: 3)
MAX_API_RETRIES=3

# Request timeout in seconds (default: 30)
API_REQUEST_TIMEOUT=30

# --------------------------------------------
# PYTHONANYWHERE SPECIFIC
# --------------------------------------------
# Set to 'true' when running on PythonAnywhere
PYTHONANYWHERE=false

# PythonAnywhere username (if applicable)
PA_USERNAME=SplitLease

# --------------------------------------------
# DEVELOPMENT / TESTING
# --------------------------------------------
# Set to 'true' to enable debug mode (NEVER in production!)
DEBUG=false

# Set to 'true' to enable testing mode
TESTING=false
