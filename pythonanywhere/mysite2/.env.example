# ============================================
# URL SHORTENER & QR CODE GENERATOR APP
# Environment Variables Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# --------------------------------------------
# DATABASE CONFIGURATION
# --------------------------------------------
DATABASE_URL=sqlite:///splitlease.db
# For PostgreSQL (PythonAnywhere): postgresql://username:password@host:port/database
# For MySQL (PythonAnywhere): mysql://username:password@host:port/database

# --------------------------------------------
# SLACK WEBHOOK CONFIGURATION
# (Optional - for URL shortener logging and notifications)
# --------------------------------------------
# Slack webhook URL for URL shortener activity logs
# Receives notifications when URLs are created, accessed, or updated
URL_SHORTENER_LOG_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/LOG/WEBHOOK

# Slack webhook URL for URL shortener error notifications
# Receives notifications when errors occur in URL shortening operations
URL_SHORTENER_ERROR_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/ERROR/WEBHOOK

# --------------------------------------------
# APPLICATION-SPECIFIC SETTINGS
# --------------------------------------------
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# --------------------------------------------
# PYTHONANYWHERE SPECIFIC
# --------------------------------------------
# Set to 'true' when running on PythonAnywhere
PYTHONANYWHERE=false

# PythonAnywhere username (if applicable)
PA_USERNAME=SplitLease

# --------------------------------------------
# DEVELOPMENT / TESTING
# --------------------------------------------
# Set to 'true' to enable debug mode (NEVER in production!)
DEBUG=false

# Set to 'true' to enable testing mode
TESTING=false
