# ============================================
# TENSORFLOW SEMANTIC LISTING MATCHING API
# Environment Variables Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# --------------------------------------------
# SUPABASE CONFIGURATION
# (Required for database access)
# --------------------------------------------
# Supabase project URL
# Get this from Supabase Dashboard > Project Settings > API
# Format: https://xxxxxxxxxxxxx.supabase.co
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous/service role key
# Get this from Supabase Dashboard > Project Settings > API
# Use the "anon" key for client-side or "service_role" key for server-side
# IMPORTANT: The service_role key bypasses Row Level Security - use carefully!
SUPABASE_KEY=your-supabase-anon-or-service-role-key-here

# --------------------------------------------
# FLASK CONFIGURATION
# --------------------------------------------
FLASK_APP=app.py
FLASK_ENV=production

# --------------------------------------------
# APPLICATION-SPECIFIC SETTINGS
# --------------------------------------------
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# --------------------------------------------
# PYTHONANYWHERE SPECIFIC
# --------------------------------------------
# Set to 'true' when running on PythonAnywhere
PYTHONANYWHERE=false

# PythonAnywhere username (if applicable)
PA_USERNAME=SplitLease

# --------------------------------------------
# DEVELOPMENT / TESTING
# --------------------------------------------
# Set to 'true' to enable debug mode (NEVER in production!)
DEBUG=false

# Set to 'true' to enable testing mode
TESTING=false
