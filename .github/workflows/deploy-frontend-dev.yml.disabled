name: Deploy Frontend (Development)

on:
  push:
    branches:
      - '**'  # All branches except main
    paths:
      - 'app/**'
      - '.github/workflows/deploy-frontend-dev.yml'

# Allow concurrent dev deployments (different branches)
concurrency:
  group: frontend-dev-${{ github.ref }}
  cancel-in-progress: true

jobs:
  deploy:
    name: Build & Deploy Preview
    runs-on: ubuntu-latest
    environment: development
    # Skip this workflow on main branch (production workflow handles it)
    if: github.ref != 'refs/heads/main'

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Bun
        uses: oven-sh/setup-bun@v1
        with:
          bun-version: latest

      - name: Cache dependencies
        uses: actions/cache@v3
        with:
          path: |
            app/node_modules
            ~/.bun/install/cache
          key: ${{ runner.os }}-bun-${{ hashFiles('app/package.json') }}
          restore-keys: |
            ${{ runner.os }}-bun-

      - name: Install dependencies
        working-directory: ./app
        run: bun install

      - name: Run linter
        working-directory: ./app
        run: bun run lint
        continue-on-error: true  # Don't block dev deployments on lint warnings

      - name: Run tests
        working-directory: ./app
        run: bun run test
        continue-on-error: true  # Don't block dev deployments on test failures

      - name: Generate routes
        working-directory: ./app
        run: bun run generate-routes

      - name: Build
        working-directory: ./app
        run: bun run build
        env:
          NODE_ENV: development

      - name: Deploy preview to Cloudflare Pages
        uses: cloudflare/wrangler-action@v3
        with:
          apiToken: ${{ secrets.CLOUDFLARE_API_TOKEN }}
          accountId: ${{ secrets.CLOUDFLARE_ACCOUNT_ID }}
          command: pages deploy app/dist --project-name=splitlease --branch=${{ github.ref_name }}

      - name: Notify Slack
        if: success()
        run: |
          python .github/scripts/send_slack.py \
            "ðŸ”§ Frontend preview deployed (branch: ${{ github.ref_name }})" \
            --type info
        continue-on-error: true
