# Underscore-prefixed internal pages - serve as HTML
# These are admin/internal tools accessed via /_page-name URLs
/_*
  Content-Type: text/html; charset=utf-8

# Internal files (no extension) - serve as HTML
/_internal/*
  Content-Type: text/html; charset=utf-8

# COMPLETELY DISABLE ALL CACHING

# All routes - no cache
/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# HTML pages - no cache
/*.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Root paths - no cache
/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Static assets - no cache
/assets/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Images - no cache
/assets/images/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0

# Functions - no cache
/functions/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
