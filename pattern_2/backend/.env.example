# Pattern 2: Urgency Countdown - Environment Variables

# ======================
# Server Configuration
# ======================
PORT=3000
NODE_ENV=development

# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://postgres:password@localhost:5432/urgency_pricing
DB_POOL_SIZE=20
DB_SSL=false

# ======================
# Redis Configuration
# ======================
REDIS_URL=redis://localhost:6379
ENABLE_CACHING=true

# ======================
# Urgency Pricing Configuration
# ======================

# Urgency steepness parameter (2.0 from simulation)
URGENCY_STEEPNESS=2.0

# Lookback window in days (default: 90)
URGENCY_LOOKBACK_WINDOW=90

# Urgency thresholds (in days)
URGENCY_THRESHOLD_CRITICAL=3
URGENCY_THRESHOLD_HIGH=7
URGENCY_THRESHOLD_MEDIUM=14

# Multiplier limits
URGENCY_MAX_MULTIPLIER=10.0
URGENCY_MIN_MULTIPLIER=1.0

# ======================
# API Configuration
# ======================

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ======================
# Background Jobs Configuration
# ======================
ENABLE_SCHEDULER=true

# Job intervals (in milliseconds)
CRITICAL_JOB_INTERVAL_MS=60000      # 1 minute
HIGH_JOB_INTERVAL_MS=900000          # 15 minutes
MEDIUM_JOB_INTERVAL_MS=3600000       # 1 hour
LOW_JOB_INTERVAL_MS=21600000         # 6 hours

# ======================
# Logging Configuration
# ======================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=text
